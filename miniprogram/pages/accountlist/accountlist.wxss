/* pages/accountlist/accountlist.wxss */
.container {
  background-color: #555;
}
.container .swiperList{
  position: relative;
  width: 100vw;
  height: 100vh;
}
.container .swiperList .styleToggle {
  width: 60rpx;
  height: 60rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.container .swiperList .accountList{
  width: 100%;
  height: 85%;
  margin-top: 10%;
}
.container .swiperList .accountList .firstPage{
  border-radius: 2%;
  background-color: rgba(150, 150, 150, 0.5);
}
.container .swiperList .accountList .firstPage .createAccount{
  color: #fff;
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container .swiperList .accountList .createAccount .slogan{
  color: rgba(255, 255, 255, 0.5);
}
.container .swiperList .accountList .createAccount .addMark{
  font-size: 120rpx;
}
.container .swiperList .accountList .createAccount .explain{
  font-size: larger;
}
.container .swiperList .accountList .accountPage{
  border-radius: 2%;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #fff;
}
.container .swiperList .accountList .accountPage .accountImg{
  height: 70%;
}
.container .swiperList .accountList .accountPage .accountTitle{
  padding: 20rpx;
  font-weight: bold;
  color: #777;
}
.container .swiperList .accountList .accountPage .accountDate{
  padding: 20rpx;
  color: #777;
}
.container .swiperList .accountList .accountPage .editAccount {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.container .swiperList .accountList .accountPage .editAccount .delete,
.container .swiperList .accountList .accountPage .editAccount .edit{
  width: 60rpx;
  height: 60rpx;
}